<% include partials/header %>
<% include partials/navbar %>

<div class="container">
  <div class="row">
    <div class="col">
      <img src="https://upload.wikimedia.org/wikipedia/commons/a/ad/Placeholder_no_text.svg" class="img-fluid" alt="Responsive image">
    </div>
    <div class="col">
      <% profile.join_date = new Date(profile.join_date).toDateString() %>
      <h2>Welcome to your profile, <%=profile.name%>!</h2>
      <h6>Name: <%=profile.name%></h6>
      <h6>Email: <%=profile.email%></h6>
      <h6>Join Date: <%=profile.join_date%></h6>
      <br />
      <div class="review-feed">
        <% reviews.forEach((review) => { %>
          <% review.review_date = new Date(review.review_date).toDateString() %>
          <div class="row">
            <div class="col">
              <span>Album Title: <a href="/albums/<%= review.album_id %>"><%=review.title%></span></a>
              <br />
              <span>Album Review: <%=review.review_text%></span>
              <br />
              <span>Reviewed on: <%=review.review_date%></span>
              <br />
            </div>
            <div class="col">
            <% if (user.id === review.user_id) { %>
              <form action="/reviews/<%= review.id %>/<%=user.id%>/delete" method="GET">
                <button class="btn-floating right" type="submit"><i class="material-icons right fa fa-trash" onclick="return confirm('Are you sure you want to delete this review?')"></i></button>
              </form>
            <% } %>
            </div>
          </div>
          <br />
          <br />
          <% }) %>
        </div>
    </div>
  </div>
</div>


<% include partials/footer %>
