<% include partials/header %>
<% include partials/navbar %>

<div class="container">
  <div class="row">
    <div class="col">
      <img src="https://f4.bcbits.com/img/a3476070115_10.jpg" class="img-fluid" alt="Responsive image">
    </div>
    <div class="col">
      <h2>Album: <%=reviews[0].title%>!</h2>
      <br />
      <a class="btn btn-primary float-right" href="/albums/<%=reviews[0].id%>/reviews/new" >New Post!</a>
      <div class="review-feed review-list">
        <h4>Reviews!</h4>
        <% reviews.forEach((review) => { %>
          <% review.review_date = new Date(review.review_date).toDateString() %>
          <div class="row">
            <div class="col">
              <span>Album Title: <a href="/albums/<%= review.album_id %>"><%=review.title%></span></a>
              <br />
              <span>Album Review: <%=review.review_text%></span>
              <br />
              <span>reviewed on: <%=review.review_date%></span>
              <br />
            </div>
            <div class="col">
            <% if (user.id === review.user_id) { %>
              <form action="/albums/<%= review.id %>/<%=user.id%>/delete" method="GET">
                <button class="btn-floating right" type="submit"><i class="material-icons right fa fa-trash" onclick="return confirm('Are you sure you want to delete this review?')"></i></button>
              </form>
            <% } %>
            </div>
          </div>
          <br />
          <br />
          <% }) %>
        </div>
    </div>
  </div>
</div>


<% include partials/footer %>
